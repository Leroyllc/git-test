<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="cn.dao.UserDao">

    <!--配置查询所有-->
    <select id="findAll" resultType="cn.domain.User">
        SELECT * FROM USER;
    </select>

    <!--配置保存用户-->
    <insert id="saveUser" parameterType="cn.domain.User">
        INSERT INTO USER(username,address,sex,birthday) VALUES (#{username},#{address},#{sex},#{birthday});
    </insert>

    <!--配置修改用户-->
    <update id="updateUser" parameterType="user">
        UPDATE user set username=#{username}, address=#{address},sex=#{sex},birthday=#{birthday} where id= 54;
    </update>

    <!--配置删除用户-->
    <delete id="deleteUser" parameterType="int">
        DELETE FROM USER where id = #{id};
    </delete>

    <!--根据id查询用户-->
    <select id="findById" parameterType="int" resultType="USER">
        SELECT * FROM USER WHERE id = #{id};
    </select>

    <!--模糊查询用户-->
    <select id="findByName" parameterType="string" resultType="cn.domain.User">
        SELECT * FROM USER WHERE username like #{name};
    </select>

    <!--查询所有记录-->
    <select id="findTotal" resultType="int">
        SELECT COUNT(id) FROM USER;
    </select>

</mapper>
